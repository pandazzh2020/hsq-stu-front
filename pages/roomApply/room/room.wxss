page {
  width: 100vw;
  height: 100vh;
  background-color: #e6e6e6;
}

.date-container {
  flex-direction: row;
  display: flex;
  text-align: center;
  margin: 20rpx 20rpx 0;
  width: calc(100% - 40rpx);
  height: 100rpx;
  line-height: 100rpx;
  font-size: 0.8rem;
  border-radius: 5rpx;
  border: 1rpx hidden #ddd;
  background-color: #fff;
  color: #1296db;
}

.date-container picker {
  width: 100%;
}

.date-container text::after {
  font-family: "cuIcon";
  font-size: 1rem;
  content: "\e79b";
  color: #1296db;
}

.building-container, .floor-container {
  margin: 20rpx 20rpx 0;
  width: calc(100% - 40rpx);
  display: flex;
  flex-direction: row;
  border: 1rpx solid #ddd;
  background-color: #fff;
  overflow: hidden;
}

.building-title, .floor-title {
  width: 150rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 0.8rem;
  font-weight: bold;
  background-color: #fff;
  border-right: 1rpx solid #ddd; 
}

.building-list, .floor-list, .room-table-body {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  width: calc(100% - 150rpx);
}

.building, .floor {
  padding: 0 50rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 0.8rem;
  border-right: 1rpx solid #ddd;
  background-color: #fff;
  display: inline-block;
}

.room-container {
  margin: 20rpx 20rpx 0;
  width: calc(100% - 40rpx);
  background-color: #fff;
  border-top: 1rpx solid #ddd;
  border-radius: 5rpx;
}

.room-table {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #ddd;
}

.room-table-header-column {
  width: 150rpx;
  border-right: 1rpx solid #ddd;
  font-weight: bold;
  text-align: center;
}

.room-table-header-row {
  border-top: 0 solid #ddd;
}

.room-table-column {
  width: 100rpx;
  border-right: 1rpx solid #ddd;
  display: inline-block;
}

.room-table-cell, .room-table-header-cell {
  width: 100%;
  height: 80rpx;
  border-top: 1rpx solid #ddd;
  line-height: 80rpx;
  font-size: 0.8rem;
  text-align: center;
}

.room-table-cell {
  padding: 0 40rpx;
}

.tips-container {
  margin: 20rpx 20rpx 0;
  width: calc(100% - 40rpx);
  font-size: 0.75rem;
  line-height: 1.2rem;
  background-color: #c1e0ef;
  border-radius: 5rpx;
}
